                  <span class="field fieldInputText"><input id="email" class="inputText" type="email"
                                        value=""/></span>
                </p>

                <p>
                  <label for="phoneNumber">Phone</label>
                  <span class="field fieldInputText"><input id="phoneNumber" class="inputText"
                                        type="tel" value=""/></span>
                </p>

