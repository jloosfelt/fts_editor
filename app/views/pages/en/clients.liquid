{% extends 'layout' %}
{% block 'main' %}
<div id="content" role="main">
  <div id="banner">
    <div class="inner">
      <div class="center bannerInside">
        <div class="bannerExtend bannerLeft"></div>
        <div class="bannerExtend bannerRight"></div>
        <div class="row-fluid bannerContent">
          <div class="span5 imageContent">
            <img src="{{ 'images/banner/customer.png' | theme_image_url }}" alt=""/>
          </div>
          <div class="span7 textContent">
            {% block 'Bandeau-en' %}
            <article class="text">
              <header class="hd">
                <h2 class="title02">{% editable_short_text 'Titre', priority: 100 %}They got caught into the game{% endeditable_short_text %}</h2>

                <p class="subTitle02">{% editable_short_text 'Sous-Titre', priority: 90 %}Participants{% endeditable_short_text %}
              </header>
              <div class="bd">
                {% editable_long_text 'Texte bandeau', hint: 'Utiliser les balises p, ul/li, strong, a sans classe.', priority: 80 %}
                <p>
                  Follow The Sun is meant for brands or shop companies who want to develop their CRM
                  strategy with a multichannel database creation. The solution is adapted to all the
                  expendable channels in the company.
                </p>

                <p>
                  Follow The Sun keeps follow-up and dynamic relationships with its consumers via its
                  partner ecosystem.
                </p>
                {% endeditable_long_text %}
              </div>
            </article>
            {% endblock %}
          </div>
        </div>
      </div>
    </div>
  </div>
  <div id="mainContent" class="center">
    <h2 class="title02">Our consumers</h2>

    <p class="subTitle02">Players</p>
    <ul class="customersBloc">
      {% for customer in contents.customers %}
        <li><img src="{{ customer.logo['url'] }}" alt="{{customer.name}}"/></li>
      {% endfor %}
    </ul>

  </div>
  <div id="bottomContent">
    {% block 'Témoignages clients' %}

    <div class="center">
      <div class="customersQuotation">
        <div class="hd">
          <h3 class="title02">{% editable_short_text 'Titre', priority: 10 %}They talk about us{% endeditable_short_text %}</h3>
          <p class="subTitle02">{% editable_short_text 'Sous-Titre', priority: 9 %}Experiences{% endeditable_short_text %}</p>
        </div>
        <div class="bd">
          <ul class="row-fluid quotationList">
            {% with_scope type:client %}
              {% for testimony in contents.testimonials limit:3 %}
                <li class="span4 {% if forloop.first %}boxArrow{% endif %}">
                  <div class="xtraPaddingL">
                    <blockquote>
                      « {{testimony.description}} ».
                    </blockquote>
                    <p>
                      <strong>{{testimony.author}}</strong><br/>
                      <span class="job">{{testimony.company}}</span>
                    </p>
                  </div>
                </li>
              {% endfor %}
            {% endwith_scope %}
          </ul>
        </div>
        <div class="ft more">
          <a href="/en/contact?title=Client" class="btn btn03"><span>Contact us</span></a>
        </div>
      </div>
    </div>
    {% endblock %}
  </div>
</div>
{% endblock %}